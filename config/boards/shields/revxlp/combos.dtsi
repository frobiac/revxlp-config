#define COMBO(NAME, BINDINGS, KEYPOS, LAYERS, TERM/*, QUICKTAP*/) \
        combo_##NAME { \
            timeout-ms = <TERM>; \
            bindings = <BINDINGS>; \
            key-positions = <KEYPOS>; \
            layers = <LAYERS>; \
            /*global-quick-tap-ms = <QUICKTAP>;*/ \
        };

/ {
    combos {
        compatible = "zmk,combos";

// Spacing combos
COMBO(ret,        &kp RET,              18 30, 0, /*50,*/ 100)
    };
};
